{
  "name": "@ridi/cql-builder",
  "version": "1.0.2",
  "description": "Cassandra CQL Builder",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest --forceExit",
    "build": "webpack",
    "lint": "eslint ./src"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "clover",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ridi/cql-builder.git"
  },
  "keywords": [
    "CQL",
    "query",
    "builder",
    "Cassandra"
  ],
  "author": "Kyungmi Koong <kyungmi.k@ridi.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ridi/cql-builder/issues"
  },
  "homepage": "https://github.com/ridi/cql-builder#readme",
  "devDependencies": {
    "@ridi/eslint-config": "*",
    "babel-jest": "^21.0.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "eslint": "^4.5.0",
    "jest": "^21.0.0",
    "webpack": "^3.5.5"
  }
}
